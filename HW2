# A basic webscraper for 'theyfightcrime.org' separating male and female characters and description sin separate text files

from bs4 import BeautifulSoup
import requests

for i in range(0,50,1):
    page = requests.get("https://theyfightcrime.org/")
    page.status_code
    
    soup = BeautifulSoup(page.content, 'html.parser')
    soup.find_all('p')
    full=soup.find_all('p')[1].get_text()
    split=[x for x in map(str.strip, full.split('.')) if x]

    male=split[0]
    female=split[1]
    
    f= open("Male.txt","a+")
    f.write(f"\n{male}")
    
    g= open("Female.txt","a+")
    g.write(f"\n{female}")
    i+=1
    
